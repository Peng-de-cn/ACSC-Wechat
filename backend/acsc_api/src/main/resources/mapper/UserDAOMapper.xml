<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acsc.api.dao.UserDAO">

    <insert id="insertUser">
        INSERT INTO t_user (`user_id`, `last_name`, `first_name`, `gender`, `birthday`, `email`, `mobile`, `address`, `avatar`, `wechat_name`, `wechat_num`, `create_time`, `vip_num`, `vip_level`, `club_id`)
        VALUES (#{userId},#{lastName},#{firstName},#{gender},#{birthday},#{email},#{mobile},#{address},#{avatar},#{wechatName},#{wechatNum},#{createTime},#{vipNum},#{vipLevel},#{clubId});
    </insert>

    <update id="updateUserById" parameterType="com.acsc.commons.entity.Activity">
        UPDATE .t_user SET `vip_num` = #{vipNum}, `vip_level` = #{vipLevel}, `club_id` = #{clubId}, `mobile` = #{mobile}, `email` = #{email}, `birthday` = #{birthday}, `gender` = #{gender}, `first_name` = #{firstName}, `last_name` = #{lastName}
        WHERE `user_id` = #{userId}
    </update>


</mapper>