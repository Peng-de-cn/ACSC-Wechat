page {
  background: #f2f2f2;
}

view,text {
  font-size: 24rpx;
  color: #666;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
}

.container .title {
  font-size: 16px;
  color: rgb(80, 104, 166);
  font-weight: bold;
  text-align: center;
  margin: 14px 0 10px;
}

.container .section {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  margin-bottom: 14rpx;
  display: flex;
  align-items: center;
}

.container .content {
  display: flex;
  flex-direction: column;
}

.container .content .content_title {
  font-size: 32rpx;
  color: #2d2d2d;
  flex-basis: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 0 1em;
}

.container .content .content_txt {
  width: 94%;
  height: 200rpx;
  padding: 20rpx;
  background: #fff8f8;
  font-size: 26rpx;
}

.section .section_title {
  margin: 0 1em;
  font-size: 32rpx;
  color: #2d2d2d;
  flex-basis: 150rpx;
}

.privacy {
  text-align: center;
  color: blue;
  margin-top: 20rpx;
}

.privacy text {
  color: purple;
}

.btnSubmit {
  width: 90%;
  background: rgb(81,103,168);
  color: #f5f5f5;
  border-radius: 10rpx;
  margin: 60rpx 20rpx 30rpx;
  box-shadow: 1px 1px 10px #ccc;
}

.btnSubmit::after {
  border: 0;
}