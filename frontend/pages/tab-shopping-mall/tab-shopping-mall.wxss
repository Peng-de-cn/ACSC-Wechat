page {
  height: 100%;
  background: #fff;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center;
  align-items: center; */
}

.container text {
  font-size: 50rpx;
}

/* 左侧分类开始 */

.shopping-mall {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
}

.shopping-mall .category {
  height: 100%;
  flex: 0 0 170rpx;
  background: rgb(248, 248, 248);
}

.shopping-mall .category .item {
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 26rpx;
  background: rgb(248, 248, 248);
}

.shopping-mall .category .item.active {
  background: #fff;
  color: #e4393c;
}

/* 左侧分类结束 */


/* 右侧商品开始 */
.shopping-mall .category-content {
  height: 100%;
  flex: 0 0 100%;
}

.category-content .item {
  width: 80%;
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.category-content .item .left {
  flex: 0 0 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.item .left image {
  width: 100%;
  height: 100%;
}

.category-content .item .right {
  padding: 20rpx;
  box-sizing: border-box;
}

.category-content .item .right .title {
  font-size: 28rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.category-content .item .right .info {
  display: flex;
  margin: 10rpx 0;
  justify-content: space-between;
  align-items: center;
}

.category-content .item .right .info .price {
  color: #fb4e44;
  font-weight: bold;
  font-size: 28rpx;
}

.category-content .item .right .info .count {
  display: flex;
  align-items: center;
}

.item .right .info .count .subtraction {
  width: 37rpx;
  height: 37rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #B2B2B2;
  border: 1px solid #B2B2B2;
  font-weight: bold;
}

.item .right .info .count .number {
  color: #000;
  margin: 0 14rpx;
}

.item .right .info .count .addition {
  width: 37rpx;
  height: 37rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #fff;
  border: 1px solid #5f6fee;
  background: #5f6fee;
  font-weight: bold;
}

.category-content .item .right .unit {
  font-size: 24rpx;
  color: #666;
}

/* 右侧商品结束 */