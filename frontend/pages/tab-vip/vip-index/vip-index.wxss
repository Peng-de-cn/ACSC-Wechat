page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.container .vip-list,.container .vip-infos {
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx 120rpx;
}

.container .vip-list .vip-item {
  margin-bottom: 20rpx;
}

.vip-list .vip-item .free-vip,.vip-infos .vip-item .free-vip {
  width: 100%;
  height: 400rpx;
}

.vip-infos .vip-item .free-vip {
  background: url(https://i.loli.net/2020/05/12/tZgUGiXs1ExJukr.png) no-repeat;
  background-size: 100% 100%;
  background-position: center;
  color: #fff;
  position: relative;
}

.vip-item .free-vip .vip-title {
  font-size: 40rpx;
  font-weight: bold;
  position: absolute;
  top: 54rpx;
  left: 60rpx;
}
.vip-item .free-vip .vip-name {
  position: absolute;
  top: 230rpx;
  left: 60rpx;
}

.vip-item .free-vip .vip-card {
  position: absolute;
  top: 320rpx;
  left: 60rpx;
}

.vip-item .free-vip image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.vip-list .vip-item .detail {
  display: flex;
  flex-direction: column;
}

.vip-item .detail .detail-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-right: 32rpx;
}

.detail .detail-top .triangle {
  margin-top: 20rpx;
  margin-left: 16rpx;
}

.detail-top .triangle .arrow {
  width: 0px;
  height: 10px;
  border: 4px solid;
  border-color: #666 transparent transparent transparent;
}

.detail-top .detail-title {
  margin: 20rpx 0 8rpx;
  padding-left: 20rpx;
  font-weight: bold;
}

.vip-item .detail .discount {
  padding-left: 50rpx;
  font-size: 28rpx;
}

.detail .btn-next {
  width: 90%;
  background-color: #5f6fee;
  color: white;
  border-radius: 10rpx;
  padding: 10rpx;
  text-align: center;
  margin: 20rpx auto;
  font-weight: bold;
  box-shadow: 2px 2px 2px #ccc;
  font-size: 30rpx;
}

.vip-infos .vip-item .detail {
  margin: 20rpx 0;
}

.vip-item .detail .detail-infos {
  padding:30rpx 24rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
}

.detail .detail-infos .infos-item {
  margin: 10rpx 0;
}

.vip-item .detail .detail-btn {
  margin-top: 70rpx;
}