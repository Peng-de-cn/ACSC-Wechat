.container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.container .card {
  width: 100%;
  height: 400rpx;
}

.container .card image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.sub-form {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.sub-form .section {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  margin-bottom: 14rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}

.sub-form .content {
  display: flex;
  flex-direction: column;
}

.sub-form .content .content_title {
  font-size: 32rpx;
  color: #2d2d2d;
  flex-basis: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 0 1em;
  box-sizing: border-box;
}

.sub-form .content .content_txt {
  width: 94%;
  height: 200rpx;
  padding: 20rpx;
  background: #fff8f8;
  font-size: 26rpx;
  box-sizing: border-box;
}

.content_txt {
  width: 94%;
  height: 120rpx;
  padding: 20rpx;
  background: #fff8f8;
  font-size: 26rpx;
  border-radius: 14rpx;
  box-sizing: border-box;
}

.section input,
.section picker {
  font-size: 24rpx;
  flex: auto;
  margin-right: 1em;
}

.section .section_title {
  margin: 0 1em;
  font-size: 32rpx;
  color: #2d2d2d;
  flex-basis: 150rpx;
}

.sub-form .privilege-title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 8rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx
}

.sub-form .privilege-list {
  font-size: 28rpx;
  background: #fff;
  padding: 8rpx 40rpx 30rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx
}

.sub-form .privilege-list .privilege-item {
  margin-left: 20rpx;
}

.btnSubmit {
  width: 90%;
  background: #5f6fee;
  color: #f5f5f5;
  border-radius: 10rpx;
  margin: 60rpx 20rpx 0;
  box-shadow: 1px 1px 10px #ccc;
  font-size: 30rpx;
}

.btnSenior {
  background: #000;
}

.btnSubmit::after {
  border: 0;
}