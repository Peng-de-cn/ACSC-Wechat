Page {
  height: 100%;
  background: #f6f6f6;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
}

.container .top {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 46px;
  min-height: 46px;
  align-items: center;
  background: #fff;
  position: fixed;
}

/* 搜索框开始 */

.page__bd {
  width: 100%;
  padding-bottom: 40px;
}

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-icon-search {
  margin-right: 8px;
  display: inline-flex;
  font-size: inherit;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

/* 搜索框结束 */

/* 排序开始 */

.order {
  width: 100%;
  padding: 10px 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  top: 46px;
  background: #f8f8f8;
  box-sizing: border-box;
}

.order .item {
  background: #fff;
  border-radius: 20px;
  font-size: 12px;
  padding: 4px 22px;
  box-sizing: border-box;
}

.order .item.active {
  background: #5096f8;
  color: #fff;
}

/* 排序结束 */

/* 活动列表开始 */

.activity-list {
  width: 100%;
  margin-top: 100px;
}

.list-item {
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  box-sizing: border-box;
  border-bottom: 1px solid #dedede;
  margin-bottom: 20px;
}

.list-item .picture {
  width: 100%;
}

.list-item .picture image {
  width: 100%;
  height: 200px;
}

.list-item .title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.list-item .infos {
  font-size: 12px;
  color: #999;
  display: flex;
}
.list-item .infos .location {
  margin-right: 12rpx;
}

.list-item .infos image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.list-item .infos {
  font-size: 12px;
  color: #999;
}

.list-item .price {
  font-size: 12px;
  font-weight: bold;
  color: #5096f8;
  text-align: right;
  margin-bottom: 10px;
}

/* 活动列表结束 */
