Page {
  height: 100%;
  background: #f5f5f5;
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: 110rpx;
  box-sizing: border-box;
}

.container .top {
  height: 89rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #d7d7d7;
  background-color: #ffffff;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 999;
}

.tags {
  display: inline-flex;
  flex: 150rpx 0 0;
  justify-content: center;
  align-items: center;
  height: 89rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 14rpx 20rpx 0 10rpx;
  box-sizing: border-box;
}

.triangle {
  margin-top: 40rpx;
  margin-left: 16rpx;
}

.triangle .arrow {
  width: 0px;
  height: 10px;
  border: 4px solid;
  border-color: #666 transparent transparent transparent;
}

.btn-search {
  height: 89rpx;
  display: flex;
  flex: 100rpx 0 0;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #d7d7d7;
}

.btn-search image {
  width: 40rpx;
  height: 40rpx;
}

/* Tab开始 */


.title {
  width: 50%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/* .titleSel text {
  color: #000;
} */

.tab-active {
  color: #5f6fee;
}

.titleSel {
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
  position: relative;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 96rpx;
  position: absolute;
  bottom: -11px;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 96rpx;
  position: absolute;
  bottom: -11px;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100%;
  margin-top: 45rpx;
  /* padding-bottom: 140rpx; */
}

.swiper .sub-title {
  padding: 16rpx 20rpx;
  color: #000;
  font-size: 28rpx;
  background: #fff;
}

.swiper .sub-title text {
  border-left: 4px solid #5f6fee;
  box-sizing: border-box;
  padding-left: 16rpx;
}

.swiper .page-section-spacing {
  height: 100%;
  min-height: 100%;
}
scroo-view {
  padding-bottom: 80rpx;
  box-sizing: border-box;
}

/* Tab结束 */

/* 活动页开始 */

.scroll-view_H {
  height: 224rpx;
  white-space: nowrap;
  background: #fff;
  padding: 6rpx 10rpx;
  border-bottom: 1px solid #E5E5E5;
}

.scroll-view-item_H {
  display: inline-block;
  width: 38%;
  border-radius: 22rpx;
  margin: 0 16rpx;
}

.scroll-view-item_H .item {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}

.item image {
  width: 100%;
  height: 100%;
  border-radius: 22rpx;
}

.item text {
  margin-top: 16rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 活动结束 */

/* 活动列表开始 */

.activity-list {
  width: 100%;
  height: 100%;
  margin-top: 14rpx;
  background: #fff;
  border-top: 1px solid #E5E5E5;
}

.list-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #dedede;
  background: #fff;
}

.no-border {
  border: none;
  padding-bottom: 60rpx;
}

.list-item .picture {
  width: 100%;
  border-radius: 20rpx;
}

.list-item .picture image {
  width: 100%;
  height: 200px;
  border-radius: 20rpx;
}

.list-item .item-title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.list-item .infos {
  font-size: 12px;
  color: #999;
  display: flex;
}

.list-item .infos .location {
  margin-right: 12rpx;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.list-item .infos image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.list-item .infos {
  font-size: 12px;
  color: #999;
}

.list-item .infos .date {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.list-item .price {
  font-size: 12px;
  font-weight: bold;
  color: #1788fa;
  text-align: right;
  margin-bottom: 10px;
}

.activity-list .state {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgb(240,240,240);
}

.activity-list .state text {
  font-size: 24rpx;
}

/* 活动列表结束 */